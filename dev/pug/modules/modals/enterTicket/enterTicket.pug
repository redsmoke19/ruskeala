section.enter-ticket.ticket-modal
	.enter-ticket__inner.ticket-modal__inner
		.enter-ticket__wrapper.ticket-modal__wrapper
			button.enter-ticket__close
				+icon('icon-small-close', 'enter-ticket__icon enter-ticket__icon--close', '18', '18')
			h2.enter-ticket__title.ticket-modal__title Входной билет
			.enter-ticket__date-wrap.ticket-modal__date-wrap
				span.enter-ticket__selected-date.ticket-modal__selected-date.ticket-modal__selected-date--park 1 августа, суббота
				.enter-ticket__day.ticket-modal__day.ticket-modal__day--park
					.enter-ticket__date.datepicker__wrapper.datepicker__wrapper--enter-ticket
						input(type="text").enter-ticket__datepicker.datepicker__input
						+icon('icon-calendar', 'datepicker__icon datepicker__icon--enter-ticket', '18', '20')
			.enter-ticket__table.ticket-modal__table.select-ticket
				.select-ticket__row
					.select-ticket__left
						span.select-ticket__age Взрослый
						span.select-ticket__price 550.00
					.select-ticket__right
						button.select-ticket__button.select-ticket__button--minus(aria-label="убрать один билет")
						span.select-ticket__current 0
						button.select-ticket__button.select-ticket__button--plus(aria-label="добавить один билет")
				.select-ticket__row
					.select-ticket__left
						span.select-ticket__age Лица 60 лет и старше
						span.select-ticket__price 250.00
					.select-ticket__right
						button.select-ticket__button.select-ticket__button--minus(aria-label="убрать один билет")
						span.select-ticket__current 0
						button.select-ticket__button.select-ticket__button--plus(aria-label="добавить один билет")
				.select-ticket__row
					.select-ticket__left
						span.select-ticket__age Студент
						span.select-ticket__price 250.00
					.select-ticket__right
						button.select-ticket__button.select-ticket__button--minus(aria-label="убрать один билет")
						span.select-ticket__current 0
						button.select-ticket__button.select-ticket__button--plus(aria-label="добавить один билет")
				.select-ticket__row
					.select-ticket__left
						span.select-ticket__age Школьникам
						span.select-ticket__price 150.00
					.select-ticket__right
						button.select-ticket__button.select-ticket__button--minus(aria-label="убрать один билет")
						span.select-ticket__current 0
						button.select-ticket__button.select-ticket__button--plus(aria-label="добавить один билет")
